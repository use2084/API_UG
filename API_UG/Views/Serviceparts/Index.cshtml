@model IEnumerable<API_UG.Models.Servicepart>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ServiceQuantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Agreement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Service)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceQuantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Agreement.AgreementId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order.OrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Service.ServiceId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ServicePartId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ServicePartId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ServicePartId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
