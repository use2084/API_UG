@model IEnumerable<API_UG.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductPhoto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductDocumentation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductCategoryNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductPhoto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductDocumentation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductCategoryNavigation.ProductCategoryId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductArticle">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProductArticle">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductArticle">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
