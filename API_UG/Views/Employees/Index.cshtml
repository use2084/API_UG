@model IEnumerable<API_UG.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeFirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeePatronymic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeBirthday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeePassport)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeePhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeLogin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeePassword)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeePostNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeStatusNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeFirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeePatronymic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeBirthday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeePassport)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeePhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeLogin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeePassword)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeePostNavigation.PostId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeStatusNavigation.StatusId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EmployeeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EmployeeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EmployeeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
